@model ForgeRealm.Models.Player

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">Delete Player</h1>

    <div class="card p-4 mb-3" style="background-color: #1e1e1e; border: 1px solid #FFD700;">
        <p class="text-center">Are you sure you want to delete this player?</p>

        <div class="mb-3 text-center">
            <h3 class="text-warning">@Model.UserName</h3>
            <p>Level: @Model.Level</p>
            <p>Experience: @Model.Experience</p>
            <p>Gold: @Model.Resource?.Gold</p>
            <p>Wood: @Model.Resource?.Wood</p>
            <p>Stone: @Model.Resource?.Stone</p>
        </div>

        <div class="text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-outline-danger me-2">Yes, Delete</button>
            </form>
            <a href="/Player" class="btn btn-outline-warning">Cancel</a>
        </div>
    </div>
</div>
