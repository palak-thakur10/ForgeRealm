@model ForgeRealm.Models.Player

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">Create New Player</h1>

    <div class="card p-4" style="background-color: #1e1e1e; border: 1px solid #FFD700;">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">UserName:</label>
                <input asp-for="UserName" class="form-control" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Level" class="form-label">Level:</label>
                <input asp-for="Level" class="form-control" type="number" value="1" min="1" />
            </div>

            <div class="mb-3">
                <label asp-for="Experience" class="form-label">Experience:</label>
                <input asp-for="Experience" class="form-control" type="number" value="0" min="0" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-outline-warning me-2">Create</button>
                <a href="/Player" class="btn btn-outline-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>
