@model ForgeRealm.Models.Player

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">Edit Player</h1>

    <div class="card p-4" style="background-color: #1e1e1e; border: 1px solid #FFD700;">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="UserName" class="form-label text-warning"></label>
                <input asp-for="UserName" class="form-control bg-dark text-light" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Level" class="form-label text-warning"></label>
                <input asp-for="Level" class="form-control bg-dark text-light" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Experience" class="form-label text-warning"></label>
                <input asp-for="Experience" class="form-control bg-dark text-light" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-outline-warning me-2">Save</button>
                <a href="/Player" class="btn btn-outline-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>
