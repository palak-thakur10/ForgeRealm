@model ForgeRealm.Models.Building
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">Add New Building</h1>

    <div class="card p-4" style="background-color: #1e1e1e; border: 1px solid #FFD700;">
        <form asp-action="Create" method="post">

            <!-- Building Name Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label text-warning">Building Name</label>
                <select asp-for="Name" class="form-control bg-dark text-light"
                        asp-items="@(new SelectList(ViewData["BuildingNames"] as List<string>))">
                    <option value="">-- Select Building --</option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Level" class="form-label text-warning"></label>
                <input asp-for="Level" class="form-control bg-dark text-light" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UpgradeCompleteAt" class="form-label text-warning"></label>
                <input asp-for="UpgradeCompleteAt" type="datetime-local" class="form-control bg-light text-darkt" />
                <span asp-validation-for="UpgradeCompleteAt" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PlayerId" class="form-label text-warning">Player</label>
                <select asp-for="PlayerId" class="form-control bg-dark text-light"
                        asp-items="@(new SelectList(ViewData["Players"] as List<ForgeRealm.Models.Player>, "Id", "UserName"))">
                    <option value="">-- Select Player --</option>
                </select>
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-outline-warning me-2">Create</button>
                <a href="/Buildings" class="btn btn-outline-light">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
