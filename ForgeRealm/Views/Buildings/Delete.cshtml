@model ForgeRealm.Models.Building

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">Delete Building</h1>

    <div class="card p-3 mb-4" style="background-color: #1e1e1e; border: 1px solid #FFD700;">
        <p>Are you sure you want to delete this building?</p>
        <div>
            <strong>Name:</strong> @Model.Name <br />
            <strong>Level:</strong> @Model.Level <br />
            <strong>Player:</strong> @Model.Player?.UserName
        </div>
    </div>

    <div class="text-center">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger me-2">Yes, Delete</button>
        </form>
        <a href="/Buildings" class="btn btn-outline-warning">Cancel</a>
    </div>
</div>
